    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nama"
        android:text="Pengajuan 001"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#000"
        android:layout_margin="2dp"/>
</LinearLayout>